<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/Aplikasi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Aplikasi Hitung"
        android:textSize="30dp"
        android:textStyle="bold"
        android:textColor="#006778"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="10dp" />

    <TextView
        android:id="@+id/panjang"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Panjang"
        android:textColor="#4B7BE5"
        app:layout_constraintTop_toBottomOf="@+id/Aplikasi"
        app:layout_constraintStart_toStartOf="@id/isiPanjang"
        android:layout_marginTop="30dp" />

    <TextView
        android:id="@+id/lebar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lebar"
        android:textColor="#4B7BE5"
        app:layout_constraintTop_toBottomOf="@+id/isiPanjang"
        app:layout_constraintStart_toStartOf="@id/isiLebar"
        android:layout_marginTop="10dp" />

    <TextView
        android:id="@+id/tinggi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tinggi"
        android:textColor="#4B7BE5"
        app:layout_constraintTop_toBottomOf="@+id/isiLebar"
        app:layout_constraintStart_toStartOf="@id/isiTinggi"
        android:layout_marginTop="10dp" />

    <EditText
        android:id="@+id/isiPanjang"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:textSize="18sp"
        android:textColor="#F7F5F2"
        android:background="#43919B"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/panjang"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="5dp"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:paddingTop="5dp"
        android:paddingBottom="8dp" />

    <EditText
        android:id="@+id/isiLebar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:textSize="18sp"
        android:textColor="#F7F5F2"
        android:background="#43919B"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/lebar"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="5dp"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:paddingTop="5dp"
        android:paddingBottom="8dp" />

    <EditText
        android:id="@+id/isiTinggi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:textSize="18sp"
        android:textColor="#F7F5F2"
        android:background="#43919B"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tinggi"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="5dp"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:paddingTop="5dp"
        android:paddingBottom="8dp" />

    <Button
        android:id="@+id/tombolHitung"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#30AADD"
        android:text="Hitung"
        android:textColor="#243D25"
        app:layout_constraintTop_toBottomOf="@id/isiTinggi"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp" />

    <TextView
        android:id="@+id/hasil"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textColor="#82DBD8"
        android:textSize="40sp"
        app:layout_constraintTop_toBottomOf="@+id/tombolHitung"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="40dp" />

</androidx.constraintlayout.widget.ConstraintLayout>